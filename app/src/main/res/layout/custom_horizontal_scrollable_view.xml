<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.example.mustafaguven.scrollableview.customviews.InnerCustomHorizontalScrollView
        android:id="@+id/hvScrollable"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lnCardPlain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/grey">

            <ImageView android:id="@+id/imgRes_1"
                android:src="@drawable/res_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dip">
            </ImageView>


            <ImageView android:id="@+id/imgRes_2"
                android:src="@drawable/res_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dip"
                android:layout_toRightOf="@id/imgRes_1">
            </ImageView><!---->

            <ImageView android:id="@+id/imgRes_3"
                android:src="@drawable/res_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dip"
                android:layout_toRightOf="@id/imgRes_2">
            </ImageView>

            <ImageView android:id="@+id/imgRes_4"
                android:src="@drawable/res_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dip"
                android:layout_toRightOf="@id/imgRes_3">
            </ImageView>

            <ImageView android:id="@+id/imgRes_5"
                android:src="@drawable/res_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dip"
                android:layout_toRightOf="@id/imgRes_4">
            </ImageView>
        </LinearLayout>


    </com.example.mustafaguven.scrollableview.customviews.InnerCustomHorizontalScrollView>


</merge>